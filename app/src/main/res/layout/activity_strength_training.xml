<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_anim"
    android:id="@+id/st"
    tools:context=".home.trainings.StrengthTraining">

    <View
        android:id="@+id/pageHeader"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#000" />
    <View
        android:id="@+id/lineHeader"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        app:layout_constraintStart_toStartOf="@id/pageHeader"
        app:layout_constraintBottom_toBottomOf="@id/pageHeader"
        app:layout_constraintEnd_toEndOf="@id/pageHeader"
        android:background="#838383" />

    <ImageView
        android:id="@+id/backIcon"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="@id/pageHeader"
        app:layout_constraintTop_toTopOf="@id/pageTitle"
        app:layout_constraintBottom_toBottomOf="@id/pageHeader"
        app:srcCompat="@drawable/backicon"
        app:layout_constraintEnd_toStartOf="@id/pageTitle"/>

    <TextView
        android:id="@+id/pageTitle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Strength Training"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:textColor="#fff"
        android:fontFamily="@font/montserrat_medium500"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="@id/pageHeader"
        app:layout_constraintStart_toEndOf="@id/backIcon"
        app:layout_constraintBottom_toBottomOf="@id/pageHeader"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:id="@+id/pageScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/pageHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/ex1"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/st1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:fontFamily="@font/montserrat_bold700"
                    android:textSize="15sp"
                    android:layout_marginTop="80dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="Set 1: Bodyweight Squat, Push-Ups and Mountain Climbers"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:fontFamily="@font/montserrat_medium500"
                    android:textSize="14sp"
                    android:layout_marginTop="125dp"
                    android:layout_marginLeft="20dp"
                    android:text="3 exercises"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/ex2"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/st2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:fontFamily="@font/montserrat_bold700"
                    android:textSize="15sp"
                    android:layout_marginTop="80dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="Set 2: Plank, Bodyweight Split Squat and Single-Leg Hip Raise"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:fontFamily="@font/montserrat_medium500"
                    android:textSize="14sp"
                    android:layout_marginTop="125dp"
                    android:layout_marginLeft="20dp"
                    android:text="3 exercises"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/ex3"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/st3"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:fontFamily="@font/montserrat_bold700"
                    android:textSize="15sp"
                    android:layout_marginTop="80dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="Set 3: Burpee With Push-Up, Single-Leg Toe Touches and Leg Raises"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:fontFamily="@font/montserrat_medium500"
                    android:textSize="14sp"
                    android:layout_marginTop="125dp"
                    android:layout_marginLeft="20dp"
                    android:text="3 exercises"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/ex5"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/st4"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:fontFamily="@font/montserrat_bold700"
                    android:textSize="16sp"
                    android:layout_marginTop="80dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="Want a Complete Workout With Cardio?"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:fontFamily="@font/montserrat_medium500"
                    android:textSize="14sp"
                    android:layout_marginTop="125dp"
                    android:layout_marginLeft="20dp"
                    android:text="3 exercises"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/scheduleTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/pageScroll"
                app:layout_constraintEnd_toEndOf="@id/pageScroll"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="25dp"
                android:text="How to progress"
                android:layout_marginLeft="6dp"
                android:textSize="20sp"
                android:textColor="#fff"
                android:fontFamily="@font/montserrat_medium500"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/strengthtrainingchart"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>